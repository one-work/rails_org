<div data-controller="menu-popup" class="dropdown pop-right">
  <div class="dropdown-trigger">
    <%= svg_tag 'sitemap' %>
    <div><%= t('org.admin.title') %></div>
  </div>
  <div data-menu-popup-target="aim" class="dropdown-menu">
    <div class="dropdown-content">
      <div class="section" style="width: 50vw">
        <p class="mb-3">
          <%= link_to({ controller: 'org/admin/home' }, data: { turbo_frame: 'body' }, class: '') do %>
            <%= svg_tag 'house' %>
            <span><%= t('org.admin.home.index.title') %></span>
          <% end %>
        </p>
        <div class="fixed-grid has-6-cols">
          <%= render 'org/admin/home/index_column' %>
        </div>
      </div>
    </div>
  </div>
</div>
