<%= button_to({ action: 'destroy' }, method: :delete, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'trash' %>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'pencil' %>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'eye', class: 'icon is-small text-info' %>
  <span><%= t('.show.title') %></span>
<% end %>
<%= button_to({ action: 'edit_roles', id: model.id }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'user-shield' %>
  <span><%= '权限管理' %></span>
<% end %>