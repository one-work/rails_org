<div id="tr_<%= model.id %>" class="media">
  <% if model.name.present? %>
    <%= link_to({ action: 'show', id: model.id }, class: 'media-content') do %>
      <%= yield %>
    <% end %>
  <% else %>
    <%= button_to({ action: 'edit', id: model.id }, class: 'text-left', form: { class: 'media-content' }) do %>
      <%= yield %>
    <% end %>
  <% end %>
  <div class="media-right">
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <%= svg_tag 'ellipsis-vertical' %>
    <% end %>
  </div>
</div>
