<%= form_with theme: 'search', model: Org::OrganDomain.new do |f| %>
  <div class="field-body">
    <%= f.text_field :host %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:host]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
