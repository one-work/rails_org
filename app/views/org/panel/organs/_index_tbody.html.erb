<td>
<% if model.logo.attached? %>
  <%= image_tag model.logo.url, class: 'image is-32x32' %>
<% else %>
  <%= svg_tag 'users' %>
<% end %>
</td>
<td>
  <p>
    <span><%= model.name %></span>
    <% if model.name_short.present? %>
      <span class="text-grey">(<%= model.name_short %>)</span>
    <% end %>
  </p>
  <p class="text-grey"><time data-controller="time" data-format="human"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
<td>
  <p><%= defined?(RailsShip) && model.area&.full_name %></p>
</td>
<td>
  <p><%= model.code %></p>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :official, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
  <div>
    <% model.roles.pluck(:name).each do |role| %>
      <span><%= role %></span>
    <% end %>
  </div>
  <div>
    <%= button_to({ action: 'edit_roles', id: model.id }, aria: { label: t('.edit_roles.title') }) do %>
      <%= svg_tag 'user-shield' %>
    <% end %>
  </div>
</td>
<td>
  <p><%= model.owner.display_uid %></p>
  <%= link_to({ controller: 'members', organ_id: model.id }, aria: { label: t('.members.index.title') }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'users', class: 'icon text-info' %>
    <span class="ml-1"><%= model.members_count %></span>
  <% end %>
</td>
<td>
  <%= link_to({ action: 'children', id: model.id }, aria: { label: t('.children.title') }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'building-flag', class: 'icon text-info' %>
    <span class="ml-1"><%= model.children_count %></span>
  <% end %>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'eye', class: 'icon text-info' %>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
    <% end %>
  </div>
  <div data-show-target="item" class="visibility-hidden">
    <%= link_to({ controller: 'organ_domains', organ_id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'mobile', class: 'icon text-info' %>
      <span class="ml-1"><%= t('.organ_domains.index.title') %></span>
    <% end %>
  </div>
</td>